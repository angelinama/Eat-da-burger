	<div class="jumbotron jumbotron-fluid">
    <img src="https://media.giphy.com/media/tITrMyC7dvgssM02b2/giphy.gif" alt="burger" class="mx-auto d-block img-fluid .img-thumbnail" style="width: 200px;">
		<h1 class="display-4 text-center align-middle">Eat da burger!</h1>
	</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2 class="text-center">available burgers!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/single-burger devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4 text-center border border-warning rounded" id="form-div">
      <h2>Add a Burger</h2>
      <form id="create-form">

        <div class="form-group">
          <input type="textarea" id="ca" name="burger_name" placeholder="burger name">
        </div>

        <button type="submit">Add a burger</button>
      </form>
    </div>
    <div class="col-md-4">
      <h2 class="text-center">Devoured burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/single-burger devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
